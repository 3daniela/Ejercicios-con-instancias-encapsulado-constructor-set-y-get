package `clase personas`

class Mascota(
    var nombre: String?, edad: Int, peso: Double
) {
    private var edad = 0
    private var peso = 0.0

    init {
        if (edad >= 0) {
            this.edad = edad
        } else {
            this.edad = 0
        }

        if (peso > 0) {
            this.peso = peso
        } else {
            this.peso = 1.0
        }
    }

    fun getEdad(): Int {
        return edad
    }

    fun getPeso(): Double {
        return peso
    }

    fun setEdad(edad: Int) {
        if (edad >= 0) {
            this.edad = edad
        } else {
            println("La edad no puede ser negativa.")
        }
    }

    fun setPeso(peso: Double) {
        if (peso > 0) {
            this.peso = peso
        } else {
            println("El peso debe ser mayor a 0.")
        }
    }

    fun comer(cantidad: Double) {
        if (cantidad > 0) {
            peso += cantidad
        }
    }

    fun correr(cantidad: Double) {
        if (cantidad > 0 && peso - cantidad > 0) {
            peso -= cantidad
        }
    }
}



class principal 


package `clase personas`

object Main {
    @JvmStatic
    fun main(args: Array<String>) {
        // Crear instancias

        val mascota1 = Mascota("Luna", 3, 8.5)
        val mascota2 = Mascota("Max", 5, 12.0)

        // Usar métodos
        mascota1.comer(0.5)
        mascota2.correr(1.0)

        // Mostrar información
        println(
            "Mascota 1: " + mascota1.getNombre() +
                    " - Edad: " + mascota1.getEdad() +
                    " - Peso: " + mascota1.getPeso()
        )

        println(
            "Mascota 2: " + mascota2.getNombre() +
                    " - Edad: " + mascota2.getEdad() +
                    " - Peso: " + mascota2.getPeso()
        )

        // Modificar con setter
        mascota1.setEdad(4)

        println(
            "Nueva edad de " + mascota1.getNombre() +
                    ": " + mascota1.getEdad()
        )
    }
}

private fun Mascota.getNombre(): Any? = Unit


